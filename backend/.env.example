# Database URL for Prisma
DATABASE_URL="file:../data/gameframe.db"

# OpenRouter API Key
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY="your_openrouter_api_key_here"

# AI Model Selection (Optional)
# Default: anthropic/claude-3-sonnet:beta
AI_MODEL="anthropic/claude-3-sonnet:beta"

# Application Domain (For OpenRouter referrer header)
APP_DOMAIN="https://gameframe.ai"

# Server Configuration
PORT=3001
NODE_ENV=development

# AI Response Settings
MAX_TOKENS=512
TEMPERATURE=0.7

# Data Privacy (for OpenRouter)
PROMPT_PRIVACY="private"
RESPONSE_PRIVACY="private" 